{{ if eq .chezmoi.os "linux" }}
zstyle ':zim:zmodule' use 'degit'
ZIM_HOME=~/.zim
# Download zimfw plugin manager if missing.
if [[ ! -e ${ZIM_HOME}/zimfw.zsh ]]; then
  curl -fsSL --create-dirs -o ${ZIM_HOME}/zimfw.zsh \
      https://github.com/zimfw/zimfw/releases/latest/download/zimfw.zsh
fi
# Initialize modules.
source ${ZIM_HOME}/init.zsh

{{ end }}

#History 
HISTFILE=~/.zsh_history
HISTSIZE=SAVEHIST=10000
setopt sharehistory
setopt extendedhistory


# Alias vim to neovim
if type nvim > /dev/null 2>&1; then
  alias vim='nvim'
fi

#Alias git to hub
if type hub > /dev/null 2>&1; then
  eval "$(hub alias -s)"
fi

alias ls='ls -G'
alias ll='ls -lah'

# Brew and Whalebrew for Mac
{{ if eq .chezmoi.os "darwin" }}
export WHALEBREW_INSTALL_PATH=~/.whalebrew/bin/
export WHALEBREW_CONFIG_DIR=~/.whalebrew/
export PATH=${PATH}:${WHALEBREW_INSTALL_PATH}
export PATH=/opt/homebrew/opt/grep/libexec/gnubin:$PATH

alias nano='/opt/homebrew/bin/nano'

{{ end }}


# Python 
{{ if eq .chezmoi.os "darwin" }}
eval "$(pyenv init -)"
{{ end }}

export EDITOR=vim
export VISUAL="code --wait"

# 1password ssh agent
export SSH_AUTH_SOCK=~/.1password/agent.sock

# OCI
{{ if eq .chezmoi.os "linux" }}
export PATH=/home/cpritchett/bin:$PATH
{{ end }}

# spaceship prompt (for not-osx)
{{ if eq .chezmoi.os "linux" }}
export fpath=( "${ZDOTDIR:-$HOME}/.zfunctions" $fpath 
autoload -U promptinit; promptinit
prompt spaceship
