#!/usr/bin/env zsh

# SSH
if [[ ! -d "$HOME"/.ssh || ! -d "$HOME"/.cache/src/personal/private/ssh ]]; then
    printf "~/.ssh or ~/.cache/src/personal/private/ssh do not exist. Exiting...\n"
    exit 1
fi 

rsync -av ~/.cache/src/personal/private/ssh/ ~/.ssh/
chmod -R u=rx,g=,o= ~/.ssh/public
chmod -R u=rx,g=,o= ~/.ssh/private
chmod u=rx,g=,o= ~/.ssh/config
chmod u=rwx,g=,o= ~/.ssh/known_hosts